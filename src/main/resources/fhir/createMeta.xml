<template xmlns="http://ws.apache.org/ns/synapse" name="createMeta">
    <parameter name="objectId"/>
    <!--Inherited from Element-->
    <parameter name="id"/>
    <parameter name="extension"/>

    <!--Meta related parameters-->
    <parameter name="versionId"/>
    <parameter name="source"/>
    <parameter name="profile"/>
    <parameter name="security"/>
    <parameter name="security.code"/>
    <parameter name="security.valueSet"/>
    <parameter name="security.coding.system"/>
    <parameter name="security.coding.version"/>
    <parameter name="security.coding.code"/>
    <parameter name="security.coding.display"/>
    <parameter name="security.coding.userSelected"/>
    <parameter name="security.text"/>
    <parameter name="tag"/>
    <parameter name="tag.code"/>
    <parameter name="tag.valueSet"/>
    <parameter name="tag.coding.system"/>
    <parameter name="tag.coding.version"/>
    <parameter name="tag.coding.code"/>
    <parameter name="tag.coding.display"/>
    <parameter name="tag.coding.userSelected"/>
    <parameter name="tag.text"/>

    <!--Inherited parameters for create operations-->
    <parameter name="targetObjectId"/>
    <parameter name="FHIRPath"/>
    <sequence>
        <class name="org.wso2.healthcare.integration.fhir.operations.basic.FHIRCreateSpecialPurposeDataType">
            <property name="dataType" value="Meta"/>
        </class>
    </sequence>
</template>